@using AdminPanel.Entity.Entities
@model IEnumerable<User>
@{
   
    Layout = "_Layout";

    ViewData["Title"] = "Kullanıcı Yönetimi"; // 
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h1 class="display-5 fw-bold text-primary">@ViewData["Title"]</h1>
            <p class="lead text-muted">Sistemdeki kullanıcıları yönetin.</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="fas fa-plus me-2"></i> Yeni Kullanıcı Ekle
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0">
                    <h5 class="card-title mb-0">Kullanıcı Listesi</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Adı</th>
                                        <th>Şifre</th>
                                        <th>E-posta</th>
                                        <th>Kullanıcı Adı</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.Id</td>
                                            <td>@user.Name</td>
                                            <td>@user.Password</td>
                                            <td>@user.Email</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning me-2" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" title="Sil">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="p-4 text-center text-muted">Henüz hiç kullanıcı bulunamadı.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
