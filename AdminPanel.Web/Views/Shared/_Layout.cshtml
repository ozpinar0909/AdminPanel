<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yönetim Paneli</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <link rel="stylesheet" href="~/css/sidebar.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="sidebar-wrapper bg-light border-end" id="sidebar-wrapper">
            <div class="sidebar-heading text-dark text-center py-4 fs-5 fw-bold border-bottom border-secondary d-flex align-items-center justify-content-center">
                @* Flexbox ile hizalama ve ikon için yer açma *@
                <button class="btn btn-outline-secondary btn-sm me-2 d-lg-none" id="sidebarToggleInSidebar">
                    @* Yeni buton buraya geldi *@
                    <i class="fas fa-bars"></i>
                </button>
                Yönetim Paneli
            </div>
            <div class="list-group list-group-flush pt-2">
                <a href="/Home/Dashboard" class="list-group-item list-group-item-action bg-light text-dark border-0 py-3">
                    <i class="fas fa-tachometer-alt me-3"></i> Dashboard
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-light text-dark border-0 py-3">
                    <i class="fas fa-users me-3"></i> Kullanıcılar
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-light text-dark border-0 py-3">
                    <i class="fas fa-box me-3"></i> Ürünler
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-light text-dark border-0 py-3">
                    <i class="fas fa-cog me-3"></i> Ayarlar
                </a>
                <a href="#" class="list-group-item list-group-item-action bg-light text-dark border-0 py-3 mt-auto">
                    <i class="fas fa-sign-out-alt me-3"></i> Çıkış Yap
                </a>
            </div>
        </div>
        <div id="page-content-wrapper" class="flex-grow-1">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Bildirimler <span class="badge bg-primary ms-1">4</span></a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i> Kullanıcı Adı
                                </a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Profil</a>
                                    <a class="dropdown-item" href="#">Ayarlar</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Çıkış Yap</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/sidebar.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>